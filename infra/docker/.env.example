# =============================================================================
# CBA Docker Environment Configuration
# Copy this to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=cba
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=cba

# -----------------------------------------------------------------------------
# Database Options
# -----------------------------------------------------------------------------
# Set to true for initial setup to auto-create tables
# Set to false after tables are created (production safety)
DB_SYNCHRONIZE=true

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# JWT Secret - MUST be changed in production
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_OPENSSL_RAND

# Token expiration
JWT_EXPIRES_IN=24h
SEAT_TOKEN_EXPIRES_IN=90m
